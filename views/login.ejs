<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/head.ejs') %>
    <title>Programming Blog</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <section class="log_section">
        <div class="log_window">
            <h2>Вход</h2>
            <form action="/api/signin" method = "POST">
                <div class="log_inp">
                    <input type="email" placeholder="Введите e-mail" required name="email">
                    <input type="password" placeholder="Введите пароль" required name="password">
                </div>
                <div class="inlog_btn">
                    <button class="log_button">
                        <p>Войти</p>
                    </button>
                </div>
            </form>
        </div>
    </section>
    <% if (message) { %>
        <script>
            alert("<%= message %>");
        </script>
    <% } %>
</body>
</html>